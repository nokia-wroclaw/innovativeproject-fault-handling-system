<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EtrNumber" class="control-label"></label>
                <input asp-for="EtrNumber" class="form-control" type="text" />
                <span asp-validation-for="EtrNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NokiaCaseId" class="control-label"></label>
                <input asp-for="NokiaCaseId" class="form-control" type="number" />
                <span asp-validation-for="NokiaCaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RfaId" class="control-label"></label>
                <input asp-for="RfaId" class="form-control" type="number" />
                <span asp-validation-for="RfaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RfaName" class="control-label"></label>
                <input asp-for="RfaName" class="form-control" type="text" />
                <span asp-validation-for="RfaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZoneId" class="control-label"></label>
                <select asp-for="ZoneId" class="form-control" asp-items="ViewBag.ZoneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssignedTo" class="control-label"></label>
                <input asp-for="AssignedTo" class="form-control" type="text" />
                <span asp-validation-for="AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" type="text" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtrTypeId" class="control-label"></label>
                <select asp-for="EtrTypeId" class="form-control" asp-items="ViewBag.EtrTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EtrStatusId" class="control-label"></label>
                <select asp-for="EtrStatusId" class="form-control" asp-items="ViewBag.EtrStatusId"></select>
            </div>
            <!--Dropdowns for users allow null values-->
            <div class="form-group">
                <label asp-for="RequestorId" class="control-label"></label>
                <select asp-for="RequestorId" class="form-control" asp-items="ViewBag.RequestorId"><option value=""></option></select>
