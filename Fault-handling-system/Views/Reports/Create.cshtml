                <label asp-for="SubcontractorId" class="control-label"></label>
                <select asp-for="SubcontractorId" class="form-control" asp-items="ViewBag.SubcontractorId"><option value=""></option></select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" type="number" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TroubleType" class="control-label"></label>
                <input asp-for="TroubleType" class="form-control" type="text" />
                <span asp-validation-for="TroubleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateIssued" class="control-label"></label>
                <input asp-for="DateIssued" class="form-control" type="date" />
                <span asp-validation-for="DateIssued" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSent" class="control-label"></label>
                <input asp-for="DateSent" class="form-control" type="date" />
                <span asp-validation-for="DateSent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtrToDes" class="control-label"></label>
                <input asp-for="EtrToDes" class="form-control" type="date" />
                <span asp-validation-for="EtrToDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingDate" class="control-label"></label>
                <input asp-for="ClosingDate" class="form-control" type="date" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtrDescription" class="control-label"></label>
                <input asp-for="EtrDescription" class="form-control" type="text" />
                <span asp-validation-for="EtrDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" type="text" rows="4" style="resize: vertical"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="files">Attachments:</label>
                <input type="file" name="files" multiple="multiple" id="files" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
             </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

